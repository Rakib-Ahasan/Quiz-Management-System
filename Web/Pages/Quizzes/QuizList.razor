@page "/quizzes"
@using Domain.Handlers
@using Domain.Handlers.QuizDTOs
@using Web.Services
@inject QuizApiService QuizApi
@inject NavigationManager Navigation
@attribute [Authorize]

<PageTitle>Available Quizzes</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary">
                <i class="bi bi-card-checklist me-2"></i>Available Quizzes
            </h2>
            <p class="text-muted">Select a quiz to test your knowledge</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading quizzes...</p>
        </div>
    }
    else if (quizzes == null || !quizzes.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>No quizzes available at the moment.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var quiz in quizzes)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-shadow">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary mb-3">@quiz.Title</h5>
                            <p class="card-text text-muted flex-grow-1">@quiz.Description</p>

                            <div class="quiz-details mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">
                                        <i class="bi bi-question-circle me-1"></i>Questions:
                                    </span>
                                    <strong>@quiz.QuestionCount</strong>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">
                                        <i class="bi bi-clock me-1"></i>Duration:
                                    </span>
                                    <strong>@quiz.DurationInMinutes mins</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">
                                        <i class="bi bi-trophy me-1"></i>Pass Score:
                                    </span>
                                    <strong>@quiz.PassingScore%</strong>
                                </div>
                            </div>

                            @if (quiz.HasCompleted)
                            {
                                <button class="btn btn-success" disabled>
                                    <i class="bi bi-check-circle me-2"></i>Completed
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-primary" @onclick="() => StartQuiz(quiz.Id)">
                                    <i class="bi bi-play-circle me-2"></i>Start Quiz
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }

    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .card-title {
        font-weight: 600;
    }

    .quiz-details {
        border-top: 1px solid #dee2e6;
        border-bottom: 1px solid #dee2e6;
        padding: 1rem 0;
    }
</style>

@code {
    private List<QuizListDto>? quizzes;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadQuizzes();
    }

    private async Task LoadQuizzes()
    {
        isLoading = true;
        try
        {
            quizzes = await QuizApi.GetAllQuizzesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading quizzes: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void StartQuiz(int quizId)
    {
        Navigation.NavigateTo($"/quiz/{quizId}");
    }
}